uses lines,string,words;

dec stdin : string;
--- stdin <= "con";

dec getc : list char;
--- getc <= read(stdin);

dec gets : list string;
--- gets <= lines(getc);

dec dir : string -> strings;
--- dir(s) <= words(read("!cmd /C DIR /B " <> s));
